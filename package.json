{
  "name": "native-canvas",
  "version": "1.0.0",
  "description": "A canvas library allows for a HTML canvas to run natively on NodeJs, without a WebBrowser",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "tslint -p . -c tslint.json 'src/**/*.ts'",
    "mkdirs": "mkdir -p dist/engine/sdl/sdl/libs",
    "libs": "cp -r src/engine/sdl/sdl/libs dist/engine/sdl/sdl",
    "build": "rm -rf dist && mkdir -p dist/engine/sdl/sdl/libs && cp -r src/engine/sdl/sdl/libs dist/engine/sdl/sdl && tsc",
    "compile": "tsc",
    "clean": "rm -rf dist package-lock.json"
  },
  "files": [
    "dist",
    "LICENSE",
    "docs"
  ],
  "keywords": [
    "canvas",
    "native",
    "native-javascript",
    "typescript",
    "node",
    "nodejs",
    "html-canvas",
    "html5",
    "html5-canvas",
    "game",
    "game-development",
    "native-canvas",
    "sdl",
    "es6",
    "sdl2"
  ],
  "author": {
    "name": "Marlon Chatman",
    "email": "mcchatman8009@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/mcchatman8009/native-canvas"
  },
  "license": "ISC",
  "devDependencies": {
    "@types/ffi": "^0.2.1",
    "@types/node": "^10.12.2",
    "@types/ref": "0.0.28",
    "@types/ref-array": "0.0.28",
    "@types/ref-union": "0.0.28",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@rgba-image/png": "^0.1.0",
    "canvas": "^2.1.0",
    "color-rgba": "^2.1.0",
    "ffi": "github:node-ffi/node-ffi#169773d",
    "jsdom": "^13.0.0",
    "pngjs": "^3.3.3",
    "ref-array": "^1.2.0",
    "ref-union": "^1.0.1"
  }
}
