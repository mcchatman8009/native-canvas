{
  "compilerOptions": {
    "outDir": "./dist",
    "lib": [
      "es6",
      "dom",
      "esnext"
    ],
    "sourceMap": true,
    "module": "commonjs",
    "declaration": true,
    "noImplicitAny": true,
    "target": "es5",
    "downlevelIteration": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "types": [
      "node"
    ],
    "typeRoots": [
      "node_modules/@types"
    ]
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
